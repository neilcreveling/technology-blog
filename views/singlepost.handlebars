<section class="text-center">
  <div class="mt-4">
    <h3>{{singlePostData.title}}</h3>
    <p class="m-0">By: {{singlePostData.blog_author.username}}</p>
    <p>{{user_id}}</p>
    <p class="m-0">Posted on: {{format_date singlePostData.date_created}}</p>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="text-center mt-3 pt-3 border col-8">
      <p>{{singlePostData.content}}</p>
    </div>
    <div class="col-2"></div>
  </div>
</section>
<section class="text-center mt-4">
  <h3>Comments:</h3>
  ON THE VIEW LEVEL
  {{#each postComments as |comment| }}
  <div class="row">
  <div class="col-4"></div>
  <div class="text-center mt-3 pt-3 border col-4">
    <p>From: {{comment_author.username}} {{comment_author.id}} {{user_id}}</p>
    <p>{{content}}</p>
    <p>{{comment_author.id}}</p>
    <p>{{user_id}}</p>
    {{#if (is_equal user_id comment_author.id)}}
      <p>{{user_id}}</p>
      <p>{{comment_author.id}}</p>
      <div class="mt-4">
        <button class="btn btn-info"><a href="/blogs/admin/edit/{{singlePostData.id}}" style="color: white">Edit</a></button>
        <button class="btn btn-danger" id="delete-post" value={{singlePostData.id}}>Delete</button>
      </div>
      <h2>We did it!</h2>
    {{/if}}
  </div>
  <div class="col-4"></div>
</div>
  {{/each}}
</section>
<section>
  PULLING IN FROM PARTIAL LEVEL
  {{#each postComments as |comment| }}
  {{> comments}}
  {{/each}}
</section>
{{> post-comment}}