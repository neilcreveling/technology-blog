<div class="row mt-4">
  <div class="col-3"></div>
  <div class="col-6">
    <div class="text-center">
      <h3>Edit "{{editSinglePostData.title}}"</h3>
    </div>
    <form class="mt-4">
      <div class="form-group">
        <label for="post-title"><strong>Title:</strong></label>
        <input type="text" class="form-control" id="edit-post-title" name="post-title" value="{{editSinglePostData.title}}">
      </div>
      <div class="form-group">
        <label for="post-content"><strong>Content:</strong></label>
        <textarea class="form-control mt-1" id="edit-post-content" name="post-content" rows="3">{{editSinglePostData.content}}</textarea>
      </div>
      <div>
        <button type="submit" class="btn btn-primary btn-lg" id="submit-edit-post">Submit Changes</button>
      </div>
    </form>
  </div>
  <div class="col-3"></div>
</div>

<script src="/js/editPost.js"></script>